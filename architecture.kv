<MyGrid>
    label_month: label_month
    textinput_month: textinput_month
    label_week: label_week
    textinput_week: textinput_week
    label_day: label_day
    textinput_day: textinput_day
    my_button: my_button

    GridLayout:
        cols:1
        size: root.width, root.height
        
        Label:
            id: label_month
            text: "Tema del mes: "

        TextInput:
            id: textinput_month
            multiline:True

        Label:
            id: label_week
            text: "Habito de la semana: "

        TextInput:
            id: textinput_week
            multiline: True

        Label:
            id: label_day
            text: "Objetivo del d√≠a: "

        TextInput:
            id: textinput_day
            multiline: True

        Button:
            id: my_button
            width: root.width
            text: "Enviar"
            on_press:root.btn()
            on_release:
                label_month.text = textinput_month.text
                textinput_month.text = ""
                textinput_month.disabled = True

