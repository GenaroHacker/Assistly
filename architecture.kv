<MyGrid>
    cols:1
    size: root.width, root.height

    label_month: label_month
    textinput_month: textinput_month
    label_week: label_week
    textinput_week: textinput_week
    label_day: label_day
    textinput_day: textinput_day
    my_button: my_button

    Label:
        id: label_month
        text: "Theme of the month"

    TextInput:
        id: textinput_month
        multiline:True

    Label:
        id: label_week
        text: "Habit of the week: "

    TextInput:
        id: textinput_week
        multiline: True

    Label:
        id: label_day
        text: "Goal of the day: "

    TextInput:
        id: textinput_day
        multiline: True

    Button:
        id: my_button
        width: root.width
        text: "Send"
        on_press:root.SendButton()

