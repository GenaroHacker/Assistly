<MyGrid>
    cols:1
    size: root.width, root.height

    label_month: label_month
    textinput_month: textinput_month
    label_week: label_week
    textinput_week: textinput_week
    label_day: label_day
    textinput_day: textinput_day
    my_button: my_button

    Label:
        id: label_month
        text: ""

    TextInput:
        id: textinput_month
        multiline:True
        #the text hint is the default text when the text is empty
        hint_text: "Month theme"

    Label:
        id: label_week
        text: ""

    TextInput:
        id: textinput_week
        multiline: True
        hint_text: "Week habit"

    Label:
        id: label_day
        text: ""

    TextInput:
        id: textinput_day
        multiline: True
        hint_text: "Day goal"

    Button:
        id: my_button
        width: root.width
        text: "Send"
        on_press:root.SendButton()

