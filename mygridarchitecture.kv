<MyGrid>
    cols:1
    size: root.width, root.height

    label_month: label_month
    textinput_month: textinput_month
    label_week: label_week
    textinput_week: textinput_week
    label_day: label_day
    textinput_day: textinput_day
    my_button: my_button

    Label:
        id: label_month
        text: ""

    MyTextInput:
        id: textinput_month
        multiline:True
        hint_text: "Month theme"
        max_characters:70

    Label:
        id: label_week
        text: ""

    MyTextInput:
        id: textinput_week
        multiline: True
        hint_text: "Week habit"
        max_characters:70

    Label:
        id: label_day
        text: ""

    MyTextInput:
        id: textinput_day
        multiline: True
        hint_text: "Day goal"
        max_characters:70

    Button:
        id: my_button
        width: root.width
        text: "Send"
        on_press:root.SendButton()

