<ScrollView>:
    canvas:
        Color:
            rgb: 0, 0.46, 1
        Rectangle:
            pos: self.pos
            size: self.size

<MyGrid>:
    canvas:
        Color:
            rgb: 0, 0.46, 1
        Rectangle:
            pos: self.pos
            size: self.size

    cols:1
    size: root.width, root.height

    label_month: label_month
    textinput_month: textinput_month
    label_week: label_week
    textinput_week: textinput_week
    label_day: label_day
    textinput_day: textinput_day
    my_button: my_button


    Label:
        id: label_month
        text: ""
        size_hint: root.widgets_heigth, None
        text_size: root.width, None
        size: self.texture_size
        padding: 20, 15
        font_name: "Tahoma.ttf"
        font_size: 16

    MyTextInput:
        id: textinput_month
        multiline:True
        hint_text: "Monthly theme"
        max_characters:80
        size_hint: root.widgets_heigth, None

    Label:
        id: label_week
        text: ""
        size_hint: root.widgets_heigth, None
        text_size: root.width, None
        size: self.texture_size
        padding: 20, 15
        font_name: "Tahoma.ttf"
        font_size: 16

    MyTextInput:
        id: textinput_week
        multiline: True
        hint_text: "Weekly habit"
        max_characters:70
        size_hint: root.widgets_heigth, None

    Label:
        id: label_day
        text: ""
        size_hint: root.widgets_heigth, None
        text_size: root.width, None
        size: self.texture_size
        padding: 20, 15
        font_name: "Tahoma.ttf"
        font_size: 16

    MyTextInput:
        id: textinput_day
        multiline: True
        hint_text: "Daily goal"
        max_characters:70
        size_hint: root.widgets_heigth, None

    Button:
        id: my_button
        width: root.width
        text: "Submit"
        on_press:root.SendButton()
        size_hint: root.widgets_heigth, None
        background_color: 0, 0.4, 1, 1
        font_name: "Tahoma.ttf"

<CustomPopupMonth>:
    size_hint: 0.8, .5
    auto_dismiss: False
    title: 'Unable to set a new theme'
    GridLayout:
        cols: 1
        canvas:
            Color:
                rgb: 0, 0.46, 1
            Rectangle:
                pos: self.pos
                size: self.size
        Label:
            text: "You have already set a theme for the current month"
            font_size: 16
            halign: "center"
            text_size: root.width, None
            size: self.texture_size
            padding: 20, 15
        Button:
            text: 'Close'
            on_press: root.dismiss()
            background_color: 0, 0.4, 1, 1

